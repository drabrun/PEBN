.container
 .page-header
  h1 Sign In
 div.alert.hide.alert-danger.alert-dismissible(role='alert',id='alertBox')
  button.close(id='loginAlertClose')
   span(aria-hidden="true") &times;
   span.sr-only Close
  p(id='loginAlertMsg') da
 form(role='form')
  div.form-group
   label(for='username') Username
   input.form-control(type='text',id='loginUsernameInput',placeholder='Username')
  div.form-group
   label(for='username') Password
   input.form-control(type='password',id='loginPasswordInput',placeholder='Password')
 .button.btn.btn-primary(id='submitLogin') Submit
